generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Anime {
  name      String    @unique
  img       String
  imgHeader String
  describe  String
  genres    String[]
  author    String
  published String
  status    String
  id        Int       @id @default(autoincrement())
  chapters  Chapter[]
}

model Chapter {
  chapter   Int
  img       String[]
  name      String   @unique
  animeName String
  anime     Anime    @relation(fields: [animeName], references: [name])
}
